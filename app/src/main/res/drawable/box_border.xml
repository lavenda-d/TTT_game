<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- You can uncomment the solid line to set a background color -->
    <!--<solid android:color="@color/beige" /> -->

    <corners android:radius="12dp" /> <!-- Rounded corners -->

    <stroke
        android:width="4dp"
        android:color="@color/dark_blue" /> <!-- Border color -->

    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp" />

    <!-- Optionally add a shadow -->
    <size

        android:width="290dp"
        android:height="290dp" />

    <!-- Add a solid color if you'd like to provide a background while excluding the background color -->
    <solid android:color="@android:color/transparent"/>
</shape>